** calculator (my-mini-calc)  [C-x c]
#+BEGIN_SRC emacs-lisp
  ;; enable a calculator in the minibuffer, activate with: C-x c
  (defun my-mini-calc (expr &optional arg)
    "Calculate expression

  If ARG is given, then insert the result to current-buffer"
    (interactive
     (list (read-from-minibuffer "Enter expression: ")
	   current-prefix-arg))

    (let ((result (calc-eval expr)))
      (if arg
	  (insert result)
	(message (format "Result: [%s] = %s" expr result)))))

  ;; keybind p/ mini calculadora
    (global-set-key (kbd "C-x c") 'my-mini-calc)
